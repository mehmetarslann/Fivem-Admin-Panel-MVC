@model IEnumerable<AdminPanel.Models.Entity.user_convictions>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Kullanıcı Hapis Logları</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.char_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.offense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.count)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.char_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.offense)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.count)
                </td>
                <td>
                    @Html.ActionLink("Detaylar", "Details", new { id = item.id }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
