@model IEnumerable<AdminPanel.Models.Entity.items>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İtems</h2>

<p>
    @Html.ActionLink("Yeni Kayıt Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rare)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.can_remove)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.label)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rare)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.can_remove)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.name }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.name }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.name })
        </td>
    </tr>
}

</table>
