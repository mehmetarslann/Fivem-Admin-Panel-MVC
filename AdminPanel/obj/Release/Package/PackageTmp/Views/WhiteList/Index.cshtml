@model IEnumerable<AdminPanel.Models.Entity.whitelist>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Whitelist Listesi</h2>

<p>
    @Html.ActionLink("Yeni Whitelist Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Steam ID")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.identifier)
    </td>
    <td>
        @Html.ActionLink("Düzenle", "Edit", new { id = item.id }) |
        @Html.ActionLink("Sil", "Delete", new { id = item.id })
    </td>
</tr>
}

</table>
