@model AdminPanel.Models.Entity.launcher_duyurular

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Duyuru Ekle</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Başlık")
        <div class="col-md-10">
            @Html.EditorFor(model => model.duyuru_baslik, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.duyuru_baslik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Metin")
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.duyuru_metin, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.duyuru_metin, "", new { @class = "text-danger" })
        </div>
    </div>
    <p style="background-color:aqua; width:300px"; >=> Tarih formatı Gün/Ay/Yıl şeklinde olmalıdır.</p>
    <div class="form-group">
        @Html.Label("Tarih")
        <div class="col-md-10">
            @Html.EditorFor(model => model.duyuru_tarih, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.duyuru_tarih, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Yeni Duyuru Ekle" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
