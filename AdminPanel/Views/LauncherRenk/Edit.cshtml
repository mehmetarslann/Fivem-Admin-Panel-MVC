@model AdminPanel.Models.Entity.launcher_renk

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Renk Düzenleme</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
