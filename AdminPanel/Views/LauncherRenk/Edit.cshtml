            </div>
        </div>

        <div class="form-group">
            @Html.Label("Blue")
            <div class="col-md-10">
                @Html.EditorFor(model => model.blue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.blue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

